
@model Patient 
@{
}
<h2>Patient Details</h2>

<div class="col-10">
    <table class="table">
        <tr><th>ID</th><td>@Model.Id</td></tr>
        <tr><th>Name</th><td>@Model.Name</td></tr>
        <tr><th>Symptoms</th><td>@Model.Symptoms</td></tr>
        <tr><th>Doctor</th><td>@Model.Doctor?.Name</td></tr>
        <tr><th>Email</th><td>@Model.Email</td></tr>
        <tr><th>Phone</th><td>@Model.Phone</td></tr>
        <tr><th>Address</th><td>@Model.Address</td></tr>
        <tr><th>Date of Birth</th><td>@Model.DateOfBirth.ToString("dd-MM-yyyy")</td></tr>
        <tr><th>Added At</th><td>@Model.CreatedAt.ToString("dd-MM-yyyy")</td></tr>
        <tr><th>Payment Status</th><td class="font-weight-700">@Model.paymentStatus</td></tr>
    </table>
</div>

@if (Model.paymentStatus != "Paid")
{ 
    <div class="row my-4 offset-4">
        <form class="col-6" method="post" asp-controller="Patients" asp-action="UpdatePayment" >
       

            <input type="hidden" name="Id" value="@Model.Id" />
            <div class="mb-3">
                <label for="dropdownSelect" class="form-label">Update Payment Status:</label>
                <select class="form-select" id="dropdownSelect" name="PaymentStatus">
                    <option selected disabled>Select an option</option>
                    <option value="Paid">Paid</option>
                    <option value="Due">Due</option>
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
 }


