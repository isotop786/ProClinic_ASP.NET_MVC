    @* <link rel="stylesheet" href="~/ProClinic.styles.css" asp-append-version="true" /> *@

    <link rel="stylesheet" href="~/lib/vendors/feather/feather.css">
    <link rel="stylesheet" href="~/lib/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/lib/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/lib/vendors/typicons/typicons.css">
    <link rel="stylesheet" href="~/lib/vendors/simple-line-icons/css/simple-line-icons.css">
    <link rel="stylesheet" href="~/lib/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <link rel="stylesheet" href="~/lib/vendors/datatables.net-bs4/dataTables.bootstrap4.css">
    <link rel="stylesheet" href="~/lib/js/select.dataTables.min.css">
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/lib/css/vertical-layout-light/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.0/css/all.min.css">


    <style>
        .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        user-select: none;
        }

        .sidebar {
        min-height: 100vh;
        }

        #sidebarToggle {
        cursor: pointer;
        }

        .sidebar-collapsed .sidebar {
        display: none;
        }

        .sidebar-collapsed .main-content {
        margin-left: 0 !important;
        }
    </style>
</head>
<body>
    <header>

        <nav class="navbar navbar-dark default-layout col-lg-12 col-12 p-0  d-flex align-items-top flex-row bg-primary ">
            <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-start">

                <div>
                 

                    <h2>ProClinique</h2>
                </div>
            </div>
            @using Microsoft.AspNetCore.Identity;
            @inject SignInManager<ApplicationUser> SignInManager;
            @inject UserManager<ApplicationUser> UserManager;
            @if (SignInManager.IsSignedIn(User))
            {
                var appUser = await UserManager.GetUserAsync(User);
            }
            <div class="navbar-menu-wrapper d-flex align-items-top">
                <ul class="navbar-nav">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        var appUser = await UserManager.GetUserAsync(User);
                        <li class="nav-item font-weight-semibold d-none d-lg-block ms-0">
                            <h1 class="welcome-text">Welcome , <span class="text-white fw-bold">@appUser.FirstName</span></h1>
                          
                        </li>
                    }
                   
                </ul>
                <ul class="navbar-nav ms-auto">
                    
                    <li class="nav-item dropdown">
                        <a class="nav-link count-indicator" id="countDropdown" href="#" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="icon-bell"></i>
                            <span class="count"></span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list pb-0" aria-labelledby="countDropdown">
                            <a class="dropdown-item py-3">
                                <p class="mb-0 font-weight-medium float-left">You have 7 unread mails </p>
                                <span class="badge badge-pill badge-primary float-right">View all</span>
                            </a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item preview-item">
                                <div class="preview-thumbnail">
                                    <img src="images/faces/face10.jpg" alt="image" class="img-sm profile-pic">
                                </div>
                                <div class="preview-item-content flex-grow py-2">
                                    <p class="preview-subject ellipsis font-weight-medium text-dark">Marian Garner </p>
                                    <p class="fw-light small-text mb-0"> The meeting is cancelled </p>
                                </div>
                            </a>
                            <a class="dropdown-item preview-item">
                                <div class="preview-thumbnail">
                                    <img src="images/faces/face12.jpg" alt="image" class="img-sm profile-pic">
                                </div>
                                <div class="preview-item-content flex-grow py-2">
                                    <p class="preview-subject ellipsis font-weight-medium text-dark">David Grey </p>
                                    <p class="fw-light small-text mb-0"> The meeting is cancelled </p>
                                </div>
                            </a>
                            <a class="dropdown-item preview-item">
                                <div class="preview-thumbnail">
                                    <img src="images/faces/face1.jpg" alt="image" class="img-sm profile-pic">
                                </div>
                                <div class="preview-item-content flex-grow py-2">
                                    <p class="preview-subject ellipsis font-weight-medium text-dark">Travis Jenkins </p>
                                    <p class="fw-light small-text mb-0"> The meeting is cancelled </p>
                                </div>
                            </a>
                        </div>
                    </li>

                    @if (SignInManager.IsSignedIn(User))
                    {
                        var appUser = await UserManager.GetUserAsync(User);

                        <li class="nav-item dropdown d-none d-lg-block user-dropdown">
                            <a class="nav-link" id="UserDropdown" href="#" data-bs-toggle="dropdown" aria-expanded="false">
                                <img class="img-xs rounded-circle" src="https://t4.ftcdn.net/jpg/04/75/00/99/360_F_475009987_zwsk4c77x3cTpcI3W1C1LU4pOSyPKaqi.jpg" alt="Profile image">
                            </a>
                            <div class="dropdown-menu dropdown-menu-right navbar-dropdown" aria-labelledby="UserDropdown">
                                <div class="dropdown-header text-center">
                                   
                                    <p class="mb-1 mt-3 font-weight-semibold">@appUser.UserName</p>
                                    <p class="fw-light text-muted mb-0">@appUser.Email</p>
                                </div>
                                <a class="dropdown-item"><i class="dropdown-item-icon mdi mdi-account-outline text-primary me-2"></i> My Profile <span class="badge badge-pill badge-danger">1</span></a>
                                <a class="dropdown-item"><i class="dropdown-item-icon mdi mdi-message-text-outline text-primary me-2"></i> Messages</a>
                                <a class="dropdown-item"><i class="dropdown-item-icon mdi mdi-calendar-check-outline text-primary me-2"></i> Activity</a>
                                <a class="dropdown-item"><i class="dropdown-item-icon mdi mdi-help-circle-outline text-primary me-2"></i> FAQ</a>
                                <a class="dropdown-item" asp-controller="Account" asp-action="Logout"><i class="dropdown-item-icon mdi mdi-power text-primary me-2"></i>Sign Out</a>
                            </div>
                        </li>
                    }
                    
                </ul>
                <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-bs-toggle="offcanvas">
                    <span class="mdi mdi-menu"></span>
                </button>
            </div>
        </nav>

      
    </header>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->

            <nav class="sidebar sidebar-offcanvas" id="sidebar">
    <ul class="nav" id="accordionSidebar"> <!-- 👈 Add accordion wrapper -->
        <li class="nav-item">
            <a class="nav-link" asp-controller="Dashboard" asp-action="Index">
                <i class="mdi mdi-grid-large menu-icon"></i>
                <span class="menu-title">Dashboard</span>
            </a>
        </li>

        <!-- Patients -->
        <li class="nav-item">
            <a class="nav-link" data-bs-toggle="collapse" href="#ui-basic" aria-expanded="false" aria-controls="ui-basic">
                <i class="menu-icon mdi mdi-wheelchair-accessibility"></i>
                <span class="menu-title">Patients</span>
                <i class="menu-arrow"></i>
            </a>
            <div class="collapse" id="ui-basic" data-bs-parent="#accordionSidebar"> <!-- 👈 Add data-bs-parent -->
                <ul class="nav flex-column sub-menu">
                    <li class="nav-item"> <a class="nav-link" asp-controller="Patients" asp-action="Index">All Patients</a></li>
                    <li class="nav-item"> <a class="nav-link" asp-controller="Patients" asp-action="Create">Add New Patient</a></li>
                </ul>
            </div>
        </li>

        <!-- Doctor -->
        <li class="nav-item">
            <a class="nav-link" data-bs-toggle="collapse" href="#ui-doctor" aria-expanded="false" aria-controls="ui-doctor">
                <i class="menu-icon mdi mdi-account"></i>
                <span class="menu-title">Doctor</span>
                <i class="menu-arrow"></i>
            </a>
            <div class="collapse" id="ui-doctor" data-bs-parent="#accordionSidebar"> <!-- 👈 Add data-bs-parent -->
                <ul class="nav flex-column sub-menu">
                    <li class="nav-item" id="ui-doctor-index"> <a class="nav-link" asp-controller="Doctors" asp-action="Index">Doctors List</a></li>
                    <li class="nav-item" id="ui-doctor-create"> <a class="nav-link" asp-controller="Doctors" asp-action="Create">Add Doctor</a></li>
                </ul>
            </div>
        </li>

        <!-- Appointments -->
        <li class="nav-item">
            <a class="nav-link" data-bs-toggle="collapse" href="#ui-appointment" aria-expanded="false" aria-controls="ui-appointment">
                <i class="menu-icon mdi mdi-calendar-clock"></i>
                <span class="menu-title">Appointments</span>
                <i class="menu-arrow"></i>
            </a>
            <div class="collapse" id="ui-appointment" data-bs-parent="#accordionSidebar"> <!-- 👈 -->
                <ul class="nav flex-column sub-menu">
                    <li class="nav-item" id="ui-doctor-index"> <a class="nav-link" asp-controller="Appointments" asp-action="Index">All Appointment</a></li>
                    <li class="nav-item" id="ui-doctor-index"> <a class="nav-link" asp-controller="Appointments" asp-action="Create">Book Appointment</a></li>
                    
                </ul>
            </div>
        </li>

        <!-- Payments -->
        <li class="nav-item">
            <a class="nav-link" data-bs-toggle="collapse" href="#ui-payments" aria-expanded="false" aria-controls="ui-payments">
                <i class="menu-icon mdi mdi-cash-multiple"></i>
                <span class="menu-title">Payments</span>
                <i class="menu-arrow"></i>
            </a>
            <div class="collapse" id="ui-payments" data-bs-parent="#accordionSidebar"> <!-- 👈 -->
                <ul class="nav flex-column sub-menu">
                    <li class="nav-item"> <a class="nav-link" href="pages/ui-features/typography.html">Typography</a></li>
                </ul>
            </div>
        </li>

        <!-- Report -->
        <li class="nav-item">
            <a class="nav-link" data-bs-toggle="collapse" href="#ui-report" aria-expanded="false" aria-controls="ui-report">
                <i class="menu-icon mdi mdi-clipboard-outline"></i>
                <span class="menu-title">Report</span>
                <i class="menu-arrow"></i>
            </a>
            <div class="collapse" id="ui-report" data-bs-parent="#accordionSidebar"> <!-- 👈 -->
                <ul class="nav flex-column sub-menu">
                    <li class="nav-item"> <a class="nav-link" href="pages/ui-features/buttons.html">Buttons</a></li>
                    <li class="nav-item"> <a class="nav-link" href="pages/ui-features/dropdowns.html">Dropdowns</a></li>
                    <li class="nav-item"> <a class="nav-link" href="pages/ui-features/typography.html">Typography</a></li>
                </ul>
            </div>
        </li>
    </ul>
</nav>


            <!-- Main content -->
            <main role="main" class="col-md-10 ms-sm-auto col-lg-10 px-md-4 main-content py-4">
                    @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ProClinic - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

 



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="~/lib/js/template.js"></script>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>



    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>